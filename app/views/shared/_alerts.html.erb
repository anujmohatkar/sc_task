<% if notice %>
  <p class="notice alert alert-success d-flex justify-content-between mt-2" role="alert">
    <%= notice %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </p>
<% end %>
<% if alert %>
  <p class="alert alert-danger d-flex justify-content-between mt-2" role="alert">
    <%= alert %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </p>
<% end %>